{
  "manifest_version": 3,
  "name": "Cart Tools for Shopify",
  "version": "1.3.1",
  "description": "Developer tools for Shopify: inspect cart/product data, view SKUs, copy JSON, and manage carts.",
  "author": "Michael Chalmers",
  "action": {
    "default_title": "Cart Tools for Shopify",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}